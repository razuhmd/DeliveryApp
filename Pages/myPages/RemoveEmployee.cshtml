@page
@model DeliveryApp.Pages.myPages.RemoveEmployeeModel
@{
    ViewData["Title"] = "RemoveEmployees";
}

<h3>Remove Employee</h3>

<div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" >
            <label asp-for="@Model.RemoveEmployee.EmployeeId" class="control-label"> Employee ID </label>
            <input asp-for="@Model.RemoveEmployee.EmployeeId" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.RemoveEmployee.EmployeeName" class="control-label"> Employee Name </label>
            <input asp-for="@Model.RemoveEmployee.EmployeeName" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.RemoveEmployee.EmployeeName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RemoveEmployee.EmployeeEmail" class="control-label"> Employee Email </label>
            <input asp-for="@Model.RemoveEmployee.EmployeeEmail" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.RemoveEmployee.EmployeeEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RemoveEmployee.EmployeeAddress" class="control-label"> Employee Address </label>
            <input asp-for="@Model.RemoveEmployee.EmployeeAddress" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.RemoveEmployee.EmployeeAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RemoveEmployee.EmployeePhoneNumber" class="control-label"> Employee Phone/Mobile </label>
            <input asp-for="@Model.RemoveEmployee.EmployeePhoneNumber" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.RemoveEmployee.EmployeePhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RemoveEmployee.EmployeeType" class="control-label"> Employee Designation </label>
            <input asp-for="@Model.RemoveEmployee.EmployeeType" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.RemoveEmployee.EmployeeType" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Confirm Remove" class="btn btn-primary" style="background-color:red"/>
        </div>
    </form>
</div>