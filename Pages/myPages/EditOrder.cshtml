@page
@model DeliveryApp.Pages.myPages.EditOrderModel
@{
    ViewData["Title"] = "EditOrder";
}

<h3>Edit and Update Order</h3>

<div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.EditOrder.OrderId" class="control-label"> Order ID </label>
            <input asp-for="@Model.EditOrder.OrderId" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.EditOrder.ExpectedDeliveryDate" class="control-label"> Expected Delivery Date </label>
            <input asp-for="@Model.EditOrder.ExpectedDeliveryDate" class="form-control" />
            <span asp-validation-for="@Model.EditOrder.ExpectedDeliveryDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.EditOrder.Address.OrderAddressId" class="control-label"> Order Address ID </label>
            <input asp-for="@Model.EditOrder.Address.OrderAddressId" class="form-control" />
            <span asp-validation-for="@Model.EditOrder.Address.OrderAddressId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.EditOrder.Address.CustomerName" class="control-label"> Customer Name </label>
            <input asp-for="@Model.EditOrder.Address.CustomerName" class="form-control" />
            <span asp-validation-for="@Model.EditOrder.Address.CustomerName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.EditOrder.Address.StreetHouse" class="control-label"> Street Name and House Number </label>
            <input asp-for="@Model.EditOrder.Address.StreetHouse" class="form-control" />
            <span asp-validation-for="@Model.EditOrder.Address.StreetHouse" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.EditOrder.Address.PostCode" class="control-label"> Post/Area Code </label>
            <input asp-for="@Model.EditOrder.Address.PostCode" class="form-control" />
            <span asp-validation-for="@Model.EditOrder.Address.PostCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.EditOrder.Address.Town" class="control-label"> Post/Area Code </label>
            <input asp-for="@Model.EditOrder.Address.Town" class="form-control" />
            <span asp-validation-for="@Model.EditOrder.Address.Town" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.EditOrder.Address.CustomerPhone" class="control-label"> Post/Area Code </label>
            <input asp-for="@Model.EditOrder.Address.CustomerPhone" class="form-control" />
            <span asp-validation-for="@Model.EditOrder.Address.CustomerPhone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.EditOrder.Vendor.VendorId" class="control-label"> Post/Area Code </label>
            <input asp-for="@Model.EditOrder.Vendor.VendorId" class="form-control" />
            <span asp-validation-for="@Model.EditOrder.Vendor.VendorId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.EditOrder.Vendor.VendorName" class="control-label"> Post/Area Code </label>
            <input asp-for="@Model.EditOrder.Vendor.VendorName" class="form-control" />
            <span asp-validation-for="@Model.EditOrder.Vendor.VendorName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.EditOrder.Vendor.VendorAddress" class="control-label"> Post/Area Code </label>
            <input asp-for="@Model.EditOrder.Vendor.VendorAddress" class="form-control" />
            <span asp-validation-for="@Model.EditOrder.Vendor.VendorAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.EditOrder.Vendor.VendorPhoneNumber" class="control-label"> Post/Area Code </label>
            <input asp-for="@Model.EditOrder.Vendor.VendorPhoneNumber" class="form-control" />
            <span asp-validation-for="@Model.EditOrder.Vendor.VendorPhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.EditOrder.Vendor.VendorEmail" class="control-label"> Post/Area Code </label>
            <input asp-for="@Model.EditOrder.Vendor.VendorEmail" class="form-control" />
            <span asp-validation-for="@Model.EditOrder.Vendor.VendorEmail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>
</div>