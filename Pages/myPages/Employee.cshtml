@page
@model DeliveryApp.Pages.EmployeeModel
@{
    ViewData["Title"] = "Employees";
}

<h1>All Employees</h1>

<p>
    <a asp-page="CreateEmployee">Create New Employee</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Employee ID
            </th>
            <th>
                Employee Name
            </th>
            <th>
                Employee E-mail
            </th>
            <th>
                Employee Address
            </th>
            <th>
                Employee Phome/Mobile
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.employees)
        {
            <tr>
                <td>
                    @employee.Value.EmployeeId
                </td>
                <td>
                    @employee.Value.EmployeeName
                </td>
                <td>
                    @employee.Value.EmployeeEmail
                </td>
                <td>
                    @employee.Value.EmployeeAddress
                </td>
                <td>
                    @employee.Value.EmployeePhoneNumber
                </td>
            </tr>
          }
    </tbody>
</table>
