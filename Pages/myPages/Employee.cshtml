@page
@model DeliveryApp.Pages.EmployeeModel
@{
    ViewData["Title"] = "Employees";
}

<h1>All Employees</h1>

<p>
    <a asp-page="CreateEmployee">Create New Employee</a>
</p>

<form method="get">
    Search For:
    <input type="text" asp-for="SearchFor" />
    <input type="submit" value="Filter" />
</form>


    <table class="table">
        <thead>
            <tr>
                <th>
                    Employee ID
                </th>
                <th>
                    Employee Name
                </th>
                <th>
                    Employee Email
                </th>
                <th>
                    Employee Address
                </th>
                <th>
                    Employee Phone/Mobile
                </th>
                <th>
                    Employee Type/Designation
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
            <tr>
                <td>
                    @employee.Value.EmployeeId
                </td>
                <td>
                    @employee.Value.EmployeeName
                </td>
                <td>
                    @employee.Value.EmployeeEmail
                </td>
                <td>
                    @employee.Value.EmployeeAddress
                </td>
                <td>
                    @employee.Value.EmployeePhoneNumber
                </td>
                <td>
                    @employee.Value.EmployeeType
                </td>
                <td>
                    <a asp-page="EditEmployee" class="btn btn-primary" asp-route-id="@employee.Value.EmployeeId">Edit </a>
                </td>
                <td>
                    <a asp-page="RemoveEmployee" class="btn btn-primary" asp-route-id="@employee.Value.EmployeeId" style="background-color:red">Remove </a>
                </td>
            </tr>
            }
        </tbody>
    </table>

