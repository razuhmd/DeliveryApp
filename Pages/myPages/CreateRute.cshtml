@page
@model DeliveryApp.Pages.myPages.CreateRuteModel
@{
    ViewData["Title"] = "CreateRute";
}

<h1>Create New Rute</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="@Model.Rute.RuteId" class="control-label">Route Number </label>
        <input asp-for="@Model.Rute.RuteId" class="form-control" />
        <span asp-validation-for="@Model.Rute.RuteId" class="text-danger"></span>
    </div>
    <h3>Assign Employee</h3>
    <div class="form-group">
        <label asp-for="@Model.Rute.Employee.EmployeeId" class="control-label">Employee ID </label>
        <input asp-for="@Model.Rute.Employee.EmployeeId" class="form-control" />
        <span asp-validation-for="@Model.Rute.Employee.EmployeeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Rute.Employee.EmployeeName" class="control-label">Employee Name </label>
        <input asp-for="@Model.Rute.Employee.EmployeeName" class="form-control" />
        <span asp-validation-for="@Model.Rute.Employee.EmployeeName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Rute.Employee.EmployeeEmail" class="control-label">Employee Email </label>
        <input asp-for="@Model.Rute.Employee.EmployeeEmail" class="form-control" />
        <span asp-validation-for="@Model.Rute.Employee.EmployeeEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Rute.Employee.EmployeeAddress" class="control-label">Employee Address </label>
        <input asp-for="@Model.Rute.Employee.EmployeeAddress" class="form-control" />
        <span asp-validation-for="@Model.Rute.Employee.EmployeeAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Rute.Employee.EmployeePhoneNumber" class="control-label">Employee Phone/Mobile </label>
        <input asp-for="@Model.Rute.Employee.EmployeePhoneNumber" class="form-control" />
        <span asp-validation-for="@Model.Rute.Employee.EmployeePhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Rute.Employee.EmployeeType" class="control-label">Employee Designation </label>
        <input asp-for="@Model.Rute.Employee.EmployeeType" class="form-control" />
        <span asp-validation-for="@Model.Rute.Employee.EmployeeType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>