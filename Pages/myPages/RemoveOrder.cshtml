@page
@model DeliveryApp.Pages.myPages.RemoveOrderModel
@{
    ViewData["Title"] = "RemoveOrder";
}

<h3>Remove Order</h3>

<div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.RemoveOrder.OrderId" class="control-label"> Order ID </label>
            <input asp-for="@Model.RemoveOrder.OrderId" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.RemoveOrder.ExpectedDeliveryDate" class="control-label"> Expected Delivery Date </label>
            <input asp-for="@Model.RemoveOrder.ExpectedDeliveryDate" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.RemoveOrder.ExpectedDeliveryDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RemoveOrder.Address.OrderAddressId" class="control-label"> Order Address ID </label>
            <input asp-for="@Model.RemoveOrder.Address.OrderAddressId" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.RemoveOrder.Address.OrderAddressId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RemoveOrder.Address.CustomerName" class="control-label"> Customer Name </label>
            <input asp-for="@Model.RemoveOrder.Address.CustomerName" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.RemoveOrder.Address.CustomerName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RemoveOrder.Address.StreetHouse" class="control-label"> Street Name and House Number </label>
            <input asp-for="@Model.RemoveOrder.Address.StreetHouse" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.RemoveOrder.Address.StreetHouse" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RemoveOrder.Address.PostCode" class="control-label"> Post/Area Code </label>
            <input asp-for="@Model.RemoveOrder.Address.PostCode" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.RemoveOrder.Address.PostCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RemoveOrder.Address.Town" class="control-label"> Town/Village Name </label>
            <input asp-for="@Model.RemoveOrder.Address.Town" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.RemoveOrder.Address.Town" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RemoveOrder.Address.CustomerPhone" class="control-label"> Post/Area Code </label>
            <input asp-for="@Model.RemoveOrder.Address.CustomerPhone" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.RemoveOrder.Address.CustomerPhone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RemoveOrder.Vendor.VendorId" class="control-label"> Post/Area Code </label>
            <input asp-for="@Model.RemoveOrder.Vendor.VendorId" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.RemoveOrder.Vendor.VendorId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RemoveOrder.Vendor.VendorName" class="control-label"> Post/Area Code </label>
            <input asp-for="@Model.RemoveOrder.Vendor.VendorName" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.RemoveOrder.Vendor.VendorName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RemoveOrder.Vendor.VendorAddress" class="control-label"> Post/Area Code </label>
            <input asp-for="@Model.RemoveOrder.Vendor.VendorAddress" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.RemoveOrder.Vendor.VendorAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RemoveOrder.Vendor.VendorPhoneNumber" class="control-label"> Post/Area Code </label>
            <input asp-for="@Model.RemoveOrder.Vendor.VendorPhoneNumber" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.RemoveOrder.Vendor.VendorPhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RemoveOrder.Vendor.VendorEmail" class="control-label"> Post/Area Code </label>
            <input asp-for="@Model.RemoveOrder.Vendor.VendorEmail" class="form-control" readonly="readonly" />
            <span asp-validation-for="@Model.RemoveOrder.Vendor.VendorEmail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Confirm Remove" class="btn btn-primary" style="background-color:red" />
        </div>
    </form>
</div>